<div id="splash-screen">
  <div class="splash-content">
    <span class="splash-text">Jay Wyss</span>
    <div class="loading-line"></div>
  </div>
</div>

<script>
  const splash = document.getElementById('splash-screen');
  const hasVisited = sessionStorage.getItem('visited');

  if (hasVisited) {
    splash.style.display = 'none';
  } else {
    sessionStorage.setItem('visited', 'true');
    
    // Slide up after animation
    setTimeout(() => {
        splash.classList.add('slide-up');
    }, 1200); 
    
    // Remove from DOM
    setTimeout(() => {
        splash.style.display = 'none';
    }, 1800);
  }
</script>

<style>
  #splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--background);
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.6s cubic-bezier(0.83, 0, 0.17, 1);
  }

  #splash-screen.slide-up {
    transform: translateY(-100%);
  }

  :global(.dark) #splash-screen {
    background-color: #0f0b1e;
  }

  .splash-content {
    text-align: center;
  }

  .splash-text {
    /* THE FIX: Use the simple body font variable */
    font-family: var(--font-body); 
    font-weight: 800; /* Extra bold for a "Logo" feel */
    font-size: 2.5rem; /* Slightly larger */
    letter-spacing: -0.05em; /* Tight tracking for modern look */
    color: var(--text-main);
    display: block;
    margin-bottom: 1rem;
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .loading-line {
    width: 0%;
    height: 3px; /* Slightly thicker line */
    background-color: var(--accent);
    margin: 0 auto;
    animation: loadLine 1s ease-in-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes loadLine {
    0% { width: 0%; }
    50% { width: 60%; }
    100% { width: 50px; } 
  }
</style>
